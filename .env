# Configuración del Host
HOST_IP=192.168.1.8                    # Cambiar a la IP específica de tu máquina
DOMAIN=localhost                    # Cambiar al dominio si está disponible

# Puertos de los servicios
FRONTEND_PORT=5173
API_PORT=8000
TRANSPORT_PORT=9000
IMG_SERVER_PORT=9001

# Configuración de seguridad
ALLOWED_ORIGINS=http://192.168.1.8:5173,http://localhost:5173,http://127.0.0.1:5173http://192.168.1.8:5173,http://localhost:5173,http://127.0.0.1:5173http://localhost:5173,http://127.0.0.1:5173  # Lista de orígenes permitidos
MAX_CONNECTIONS=100                 # Límite de conexiones simultáneas
RATE_LIMIT=100                     # Límite de peticiones por minuto
SESSION_TIMEOUT=3600               # Tiempo de expiración de sesión en segundos

# Configuración de SSL/TLS (recomendado para producción)
USE_HTTPS=false                    # Cambiar a true en producción
SSL_CERT_PATH=./certs/cert.pem     # Ruta al certificado SSL
SSL_KEY_PATH=./certs/key.pem       # Ruta a la clave privada SSL